/* {{scheme-name}} Theme - by {{scheme-author}} */

[data-theme={{scheme-variant}}] {
    /* Pico CSS color variables */
    --pico-background-color: #{{base00-hex}};
    --pico-color: #{{base05-hex}};
    --pico-text-selection-color: #{{base02-hex}};
    --pico-muted-color: #{{base03-hex}};
    --pico-muted-border-color: #{{base02-hex}};
    --pico-primary: #{{base0D-hex}};
    --pico-primary-background: #{{base02-hex}};
    --pico-primary-border: var(--pico-primary-background);
    --pico-primary-underline: rgba(1, 160, 228, 0.5);
    --pico-primary-hover: #{{base0E-hex}};
    --pico-primary-hover-background: #{{base0E-hex}};
    --pico-primary-hover-border: var(--pico-primary-hover-background);
    --pico-primary-hover-underline: var(--pico-primary-hover);
    --pico-primary-focus: rgba(1, 160, 228, 0.5);
    --pico-primary-inverse: #{{base00-hex}};
    --pico-secondary: #{{base04-hex}};
    --pico-secondary-background: #{{base02-hex}};
    --pico-secondary-border: var(--pico-secondary-background);
    --pico-secondary-underline: rgba(128, 125, 124, 0.5);
    --pico-secondary-hover: #{{base05-hex}};
    --pico-secondary-hover-background: #{{base03-hex}};
    --pico-secondary-hover-border: var(--pico-secondary-hover-background);
    --pico-secondary-hover-underline: var(--pico-secondary-hover);
    --pico-secondary-focus: rgba(128, 125, 124, 0.25);
    --pico-secondary-inverse: #{{base00-hex}};
    --pico-contrast: #{{base06-hex}};
    --pico-contrast-background: #{{base06-hex}};
    --pico-contrast-border: var(--pico-contrast-background);
    --pico-contrast-underline: rgba(214, 213, 212, 0.5);
    --pico-contrast-hover: #{{base07-hex}};
    --pico-contrast-hover-background: #{{base07-hex}};
    --pico-contrast-hover-border: var(--pico-contrast-hover-background);
    --pico-contrast-hover-underline: var(--pico-contrast-hover);
    --pico-contrast-focus: rgba(214, 213, 212, 0.25);
    --pico-contrast-inverse: #{{base00-hex}};
    --pico-box-shadow: 0 0.125rem 0.5rem rgba(0, 0, 0, 0.1);
    --pico-h1-color: #{{base06-hex}};
    --pico-h2-color: #{{base05-hex}};
    --pico-h3-color: #{{base05-hex}};
    --pico-h4-color: #{{base04-hex}};
    --pico-h5-color: #{{base04-hex}};
    --pico-h6-color: #{{base03-hex}};
    --pico-mark-background-color: #{{base0A-hex}};
    --pico-mark-color: #{{base00-hex}};
    --pico-ins-color: #{{base0B-hex}};
    --pico-del-color: #{{base08-hex}};
    --pico-blockquote-border-color: var(--pico-muted-border-color);
    --pico-blockquote-footer-color: var(--pico-muted-color);
    --pico-button-box-shadow: 0 0 0 rgba(0, 0, 0, 0);
    --pico-button-hover-box-shadow: 0 0 0 rgba(0, 0, 0, 0);
    --pico-table-border-color: var(--pico-muted-border-color);
    --pico-table-row-stripped-background-color: #{{base01-hex}};
    --pico-code-background-color: #{{base01-hex}};
    --pico-code-color: #{{base0A-hex}};
    --pico-code-kbd-background-color: var(--pico-color);
    --pico-code-kbd-color: var(--pico-background-color);
    --pico-form-element-background-color: #{{base00-hex}};
    --pico-form-element-selected-background-color: #{{base02-hex}};
    --pico-form-element-border-color: #{{base03-hex}};
    --pico-form-element-color: #{{base05-hex}};
    --pico-form-element-placeholder-color: var(--pico-muted-color);
    --pico-form-element-active-background-color: #{{base00-hex}};
    --pico-form-element-active-border-color: var(--pico-primary-border);
    --pico-form-element-focus-color: var(--pico-primary-border);
    --pico-form-element-disabled-opacity: 0.5;
    --pico-form-element-invalid-border-color: #{{base08-hex}};
    --pico-form-element-invalid-active-border-color: #{{base09-hex}};
    --pico-form-element-invalid-focus-color: var(--pico-form-element-invalid-active-border-color);
    --pico-form-element-valid-border-color: #{{base0B-hex}};
    --pico-form-element-valid-active-border-color: #{{base0C-hex}};
    --pico-form-element-valid-focus-color: var(--pico-form-element-valid-active-border-color);
    --pico-switch-background-color: #{{base03-hex}};
    --pico-switch-checked-background-color: var(--pico-primary-background);
    --pico-switch-color: #{{base00-hex}};
    --pico-switch-thumb-box-shadow: 0 0 0 rgba(0, 0, 0, 0);
    --pico-range-border-color: #{{base02-hex}};
    --pico-range-active-border-color: #{{base03-hex}};
    --pico-range-thumb-border-color: var(--pico-background-color);
    --pico-range-thumb-color: var(--pico-secondary-background);
    --pico-range-thumb-active-color: var(--pico-primary-background);
    --pico-accordion-border-color: var(--pico-muted-border-color);
    --pico-accordion-active-summary-color: var(--pico-primary-hover);
    --pico-accordion-close-summary-color: var(--pico-color);
    --pico-accordion-open-summary-color: var(--pico-muted-color);
    --pico-card-background-color: #{{base00-hex}};
    --pico-card-border-color: var(--pico-muted-border-color);
    --pico-card-box-shadow: var(--pico-box-shadow);
    --pico-card-sectioning-background-color: #{{base01-hex}};
    --pico-dropdown-background-color: #{{base00-hex}};
    --pico-dropdown-border-color: #{{base02-hex}};
    --pico-dropdown-box-shadow: var(--pico-box-shadow);
    --pico-dropdown-color: var(--pico-color);
    --pico-dropdown-hover-background-color: #{{base01-hex}};
    --pico-loading-spinner-opacity: 0.5;
    --pico-modal-overlay-background-color: rgba(0, 0, 0, 0.5);
    --pico-progress-background-color: #{{base02-hex}};
    --pico-progress-color: var(--pico-primary-background);
    --pico-tooltip-background-color: var(--pico-contrast-background);
    --pico-tooltip-color: var(--pico-contrast-inverse);

    /* Base16 palette colors for use in custom styles */
    --b16-base00: #{{base00-hex}};
    --b16-base01: #{{base01-hex}};
    --b16-base02: #{{base02-hex}};
    --b16-base03: #{{base03-hex}};
    --b16-base04: #{{base04-hex}};
    --b16-base05: #{{base05-hex}};
    --b16-base06: #{{base06-hex}};
    --b16-base07: #{{base07-hex}};
    --b16-base08: #{{base08-hex}};
    --b16-base09: #{{base09-hex}};
    --b16-base0A: #{{base0A-hex}};
    --b16-base0B: #{{base0B-hex}};
    --b16-base0C: #{{base0C-hex}};
    --b16-base0D: #{{base0D-hex}};
    --b16-base0E: #{{base0E-hex}};
    --b16-base0F: #{{base0F-hex}};
}
